#include <iostream>
using namespace std;

void main()
{
	int date = 0, e_date, entry[3];
	for (;;)
	{
		cout << "Enter Day: ";
		cin >> entry[0];
		cout << "Enter Month: ";
		cin >> entry[1];
		cout << "Enter Year : ";
		cin >> entry[2];
		if (entry[0] == 29 && entry[1] == 2 && entry[1]<=12 && entry[2] % 4 == 0 && entry[2]>=2000 && entry[0]>0 && entry[1]>0 && entry[2]>0)	//February entry
			break;
		else
		if (entry[0] <= 31 && entry[1] % 2 != 0 && entry[1] <= 12 && entry[2] >= 2000 && entry[0]>0 && entry[1]>0 && entry[2]>0)				//Months with 31 days
			break;
		else
		if (entry[0] <= 30 && entry[1] % 2 == 0 && entry[1] <= 12 && entry[2] >= 2000 && entry[0]>0 && entry[1]>0 && entry[2]>0)				//Months with 30 days
			break;
		else
			cout << "Wrong format or year below 2000. Try again!" << endl;
		for (int i = 0; i < 2; i++)
		{
			entry[i] = 0;
		}
	}
	date = date + entry[0];					//add day

	for (int i = 1; i < entry[1]; i++)		//add month
	{
		if (i == 2)
		{
			if (entry[2] % 4 == 0)
				date = date + 29;
			else
				date = date + 28;
		}
		else
		{
			if (i % 2 == 0)
				date = date + 30;
			else
				date = date + 31;
		}
	}

	for (int i = 2000; i < entry[2]; i++)	//add year counting from 2000
	{
		if (i % 4 == 0)
			date = date + 366;
		else
			date = date + 365;
	}
	cout << "Days since 2000: " << date << endl;
	e_date = date + 3; 
	cout << "e_date: " << e_date << endl;
}
